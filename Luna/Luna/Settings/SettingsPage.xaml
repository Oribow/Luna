<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:settings="clr-namespace:Luna.Settings"
             x:Class="Luna.Settings.SettingsPage"
             x:DataType="settings:SettingsViewModel"
             Title="Settings"
             BackgroundImageSource="polarlights">
    <ContentPage.Content>
        <StackLayout Spacing="30">
            <Label Text="This is still app is still in beta. Thanks for checking it out!" 
                HorizontalOptions="CenterAndExpand" TextColor="White" />

            <StackLayout Orientation="Vertical" BackgroundColor="{StaticResource Panel Background}" Padding="5">
                <Label Text="Problems or suggestions? Please let us know!" TextColor="White" HorizontalOptions="Center"/>
                <Button Text="Email Us" Command="{Binding ContactUs}" HorizontalOptions="Center"/>
            </StackLayout>
            
            <StackLayout Orientation="Vertical" BackgroundColor="{StaticResource Panel Background}" Padding="5">
                <Label Text="Resets all data. WARNING can't be undone." TextColor="White" HorizontalOptions="Center"/>
                <Button Text="Reset data" HorizontalOptions="Center"
                        BackgroundColor="Red" Clicked="ResetDataButton_Clicked"/>
            </StackLayout>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>