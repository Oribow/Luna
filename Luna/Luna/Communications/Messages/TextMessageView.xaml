<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Luna.Communications.Messages.TextMessageView"
             x:DataType="local:TextMessageViewModel"
             xmlns:local="clr-namespace:Luna.Communications.Messages">
    <ContentView.Content>
        <StackLayout Orientation="Vertical" Margin="0, 0, 0, 17" Padding="10,5" x:Name="MainLayout"
                     Spacing="0" BackgroundColor="{StaticResource Window Panel Background}">
            <Label x:Name="Content" TextColor="White" Text="{Binding Text}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>