<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Luna.Communications.Messages.TextMessageView"
             x:DataType="local:TextMessageViewModel"
             xmlns:local="clr-namespace:Luna.Communications.Messages"
             Padding="0,0,0,17">
    <ContentView.Content>
        <Frame Padding="10" BackgroundColor="{StaticResource Window Panel Background}">
            <Label TextColor="White" Text="{Binding Text}"/>
        </Frame>
    </ContentView.Content>
</ContentView>