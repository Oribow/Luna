<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Luna.Communications.Messages.TextMessageView"
             x:DataType="local:TextMessageViewModel"
             xmlns:local="clr-namespace:Luna.Communications.Messages" xmlns:views="clr-namespace:Luna.Views"
             Padding="0,8,0,8">
    <ContentView.Content>
        <Frame Padding="10">
            <views:TypeWriterLabel TextColor="White" 
                                   IsTypingAnimationEnabled="{Binding TypingAnimationWanted}"
                                   TextToWrite="{Binding Text}"
                                   FinishedWriting="{Binding CompleteMessage}"
                                   KeepConsistentSize="True"/>
        </Frame>
    </ContentView.Content>
</ContentView>