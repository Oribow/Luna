<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:vc="clr-namespace:Luna.ValueConverter"
             x:Class="Luna.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Secondary">Orange</Color>
            <Color x:Key="Text Color">Black</Color>
            <Color x:Key="Page Background">White</Color>
            <Color x:Key="Window Panel Background">#aa151515</Color>
            <Color x:Key="Window Panel Header">#ee2A2A2A</Color>
            <Color x:Key="Window Panel Item">#ee111111</Color>

            <vc:InvertBoolConverter x:Key="InvertedBoolConverter" />
            <vc:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>